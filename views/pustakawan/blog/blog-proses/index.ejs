<%- include('../../../partials/headers/__header-dashboard.ejs', { title: 'Blog Proses' }) %>
<%- include('../../../partials/navs/__nav-side-pustakawan.ejs') %>
<%- include('../../../partials/messages/__messages-dashboard.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
                            <h4 class="card-title mb-3 mb-md-0">Blog Proses</h4>
                            <a href="/pustakawan/blog/buat" class="btn btn-primary btn-sm" data-loading>Tambah Blog</a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Judul</th>
                                        <th>Nama Pembuat</th>
                                        <th>Dibuat Pada</th>
                                        <th style="width: 200px;" class="text-right">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (Array.isArray(data) && data.length) { %>
                                        <% for (let i = 0; i < data.length; i++) { const item = data[i]; %>
                                            <tr>
                                                <td data-label="No"><%= (page - 1) * 20 + i + 1 %></td>
                                                <td data-label="Judul"><%= item.judul %></td>
                                                <td data-label="Nama Pembuat"><%= item.nama_pembuat %></td>
                                                <td data-label="Dibuat Pada">
                                                    <%
                                                        const dateObj = new Date(item.dibuat_pada);
                                                        const months = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
                                                        const day = dateObj.getDate();
                                                        const month = months[dateObj.getMonth()];
                                                        const year = dateObj.getFullYear();
                                                        const hours = String(dateObj.getHours()).padStart(2, '0');
                                                        const minutes = String(dateObj.getMinutes()).padStart(2, '0');
                                                        const formattedDate = `${day} ${month} ${year} ${hours}:${minutes}`;
                                                    %>
                                                    <%= formattedDate %>
                                                </td>
                                                <td class="text-right" data-label="Aksi">
                                                    <div class="btn-actions">
                                                        <a href="/pustakawan/blog-proses/<%= item.id %>" class="btn btn-sm btn-outline-primary" data-loading>Detail</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">Belum ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="text-muted small">Halaman <%= page %> dari <%= totalHalaman %></div>
                            <nav>
                                <ul class="pagination mb-0">
                                    <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= page - 1 %>" data-loading aria-label="Sebelumnya">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    <% for (let p = 1; p <= totalHalaman; p++) { %>
                                        <li class="page-item <%= p === page ? 'active' : '' %>"><a class="page-link" href="?page=<%= p %>" data-loading><%= p %></a></li>
                                    <% } %>
                                    <li class="page-item <%= page >= totalHalaman ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= page + 1 %>" data-loading aria-label="Berikutnya">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/scripts/__script-dashboard.ejs') %>

